{% extends './layout.njk' %}
{% block pageName %}
    Chefs
{% endblock pageName %}
{% block content %}
    <div class="content">
        <div class="cards chefs">
            {% for chef in chefs %}
                <div class="card" id="{{ chef.id }}">
                    <div class="chefImage">
                        {% if not chef.path %}
                            <img src="https://place-hold.it/300x100?text=Sem%20Imagem" alt="Sem imagem"/></div>
                    {% else %}
                        <img src="{{ chef.path }}" alt="{{ chef.name }}"/></div>
                {% endif %}
                <div class="chefInfo">
                    <p class="nameChef">
                        {{ chef.name }}
                    </p>
                    <p class="qtdRecipes">
                        {{ chef.total_recipes }} receitas
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}