{% extends './layout.njk' %}
{% block content %}
    <form id="form" method="POST" action="/session/forgot-password" class="content admin session">
        <div class="info">
            <h1>Esqueceu a senha?
            </h1>
        </div>
        <div class="items login">
            <div class="item">
                <p>E-mail</p>
                <input value="{{ user.email }}" placeholder="Digite seu e-mail para recuperar sua senha" type="text" name="email" onfocusout="Validate.init(this, 'isEmail')"/>
            </div>
        </div>
        <div class="options">
            <a href="/login/forgot-password" class="button"></a>
            <input form="form" type="submit" class="button" value="Recuperar"/>
        </div>
    </form>
{% endblock content %}