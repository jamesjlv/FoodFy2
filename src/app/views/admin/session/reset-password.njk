{% extends './layout.njk' %}
{% block content %}
    <form id="form" method="POST" action="/session/reset-password" class="content admin session">
        <div class="info">
            <h1>Nova senha</h1>
        </div>
        {% include './fields.njk' %}
        <div class="options">
            <a href="/session/forgot-password" class="button"></a>
            <input form="form" type="submit" class="button" value="Salvar senha"/>
        </div>
        <input type="hidden" name='token' value='{{ token }}'/>
    </form>
{% endblock content %}