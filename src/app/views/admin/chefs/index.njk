{% extends '../layout.njk' %}
{% import '../../parts/card.njk' as card %}
{% block content %}
    {% call card.render('Gerenciar Chefs ') %}
    <div class="buttonsPages">
        {% if isAdmin %}
            <a href="/admin/chefs/create" class="button submit">Novo</a>
        {% endif %}
    </div>
    <div class="content">
        <div class="cards chefs">
            {% for chef in chefs %}
                <div class="card" id="{{ chef.id }}">
                    <div class="chefImage">
                        {% if not chef.path %}
                            <img src="https://place-hold.it/300x100?text=Sem%20Imagem" alt="Sem imagem"></div>
                        {% else %}
                            <img src="{{ chef.path }}" alt="{{ recipe.title }}"></div>
                        {% endif %}
                        <div class="chefInfo">
                            <p class="nameChef">
                                {{ chef.name }}
                            </p>
                            <p class="editLink">
                                <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% endcall %}
    {% endblock content %}