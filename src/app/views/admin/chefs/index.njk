{% extends '../layout.njk' %}
{% block content %}
    <div class="content">
        <div class="title">
            <p>Gerenciar chefs</p>
        </div>
        <div class="cards chefs">
            {% for chef in chefs %}
                <div class="card" id="{{ chef.id }}">
                    <div class="chefImage">
                        {% if not chef.path %}
                            <img src="https://place-hold.it/300x100?text=Sem%20Imagem" alt="Sem imagem"></div>
                        {% else %}
                            <img src="{{ chef.path }}" alt="{{ recipe.title }}"></div>
                        {% endif %}
                        <div class="chefInfo">
                            <p class="nameChef">
                                {{ chef.name }}
                            </p>
                            <p class="editLink">
                                <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endblock content %}