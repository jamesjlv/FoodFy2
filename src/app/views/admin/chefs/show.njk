{% extends "../layout.njk" %}
{% block content %}
    <div class="content admin">
        <div class="info">
            <h1>Chef: {{ chef.name }}</h1>
            <a href="/admin/chefs/{{ chef.id }}/edit" class="button">Editar Chef</a>
        </div>
        <div class="chef">
            <div class="chefAvatar">
                {% if not chef.path %}
                    <img src="https://place-hold.it/300x100?text=Sem%20Imagem" alt="Sem imagem"></div>
                {% else %}
                    <img src="{{ chef.path }}" alt="{{ recipe.title }}"></div>
                {% endif %}
                <div class="chefAdminInfo">
                    <h1 class="chefName">{{ chef.name }}</h1>
                    <p class="chefRecipes">
                        {{ chef.total_recipes }} receitas</p>
                </div>
            </div>
            <section class="recipes">
                <div class="title">
                    <p>Receitas</p>
                    <div class="cards admin">
                        {% for recipe in recipes %}
                            <div class="card" id="{{ recipe.id }}">
                                <div class="cardImage">
                                    {% if not recipe.images[0] %}
                                        <img src="https://place-hold.it/300x100?text=Sem%20Imagem" alt="Sem imagem"></div>
                                    {% else %}
                                        <img src="{{ recipe.images[0].src }}" alt="{{ recipe.title }}"></div>
                                    {% endif %}
                                    <div class="cardInfo">
                                        <p class="nameRecipe">
                                            {{ recipe.title }}
                                        </p>
                                        <p class="authorRecipe">
                                            por {{ chef.name }}
                                        </p>
                                        <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </section>
            </div>
        {% endblock %}