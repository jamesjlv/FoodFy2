{% extends '../layout.njk' %}
{% import '../../parts/card.njk' as card %}
{% block content %}
    {% call card.render('Chef '+ chef.name) %}
    <div class="buttonsPages">
        {% if isAdmin %}
            <a href="/admin/chefs/{{ chef.id }}/edit" class="button submit">Editar Chef</a>
        {% endif %}
    </div>
    <div class="content">
        <div class="chef">
            <div class="chefAvatar">
                {% if not chef.path %}
                    <img src="https://place-hold.it/300x100?text=Sem%20Imagem" alt="Sem imagem"></div>
                {% else %}
                    <img src="{{ chef.path }}" alt="{{ recipe.title }}"></div>
                {% endif %}
                <div class="chefAdminInfo">
                    <h1 class="chefName">{{ chef.name }}</h1>
                    <p class="chefRecipes">
                        {{ chef.total_recipes }} receitas</p>
                </div>
            </div>
            <section class="recipes">
                <div class="title">
                    <p>Receitas</p>
                    <div class="cards admin">
                        {% for recipe in recipes %}
                            <div class="card" id="{{ recipe.id }}">
                                <div class="cardImage">
                                    {% if not recipe.images[0] %}
                                        <img src="https://place-hold.it/300x100?text=Sem%20Imagem" alt="Sem imagem"></div>
                                    {% else %}
                                        <img src="{{ recipe.images[0].src }}" alt="{{ recipe.title }}"></div>
                                    {% endif %}
                                    <div class="cardInfo">
                                        <p class="nameRecipe">
                                            {{ recipe.title }}
                                        </p>
                                        <p class="authorRecipe">
                                            por {{ chef.name }}
                                        </p>
                                        <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </section>
            </div>
            {% endcall %}
        {% endblock %}