{% extends "../layout.njk" %}
{% block pageName %}
    {{ recipe.title }}
{% endblock %}
{% block content %}
    <div class="content admin">
        <div class="info">
            <h1>Receita: {{ recipe.title }}</h1>
            <a href="/admin/recipes/{{ recipe.id }}/edit" class="button">Editar receita</a>
        </div>
        <div class="recipe">
            <div class="recipeImage">
                <img src="{{ recipe.image }}" alt="{{ recipe.title }}"></div>
                <div class="recipeInfo">
                    <h1 class="title">{{ recipe.title }}</h1>
                    <p class="author">por {{ recipe.author }}</p>
                </div>
            </div>
            <section class="ingredient">
                <div class="legend">
                    <h2>Ingredientes</h2>
                </div>
                <div class="sectionContent">
                    <ul>
                        {% for ingredient in recipe.ingredients %}
                            <li>{{ ingredient }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </section>
            <section class="howToPrepare">
                <div class="legend">
                    <h2>Modo de preparo</h2>
                </div>
                <div class="sectionContent">
                    <p>{{ recipe.preparation }}</p>
                </div>
            </section>
            <section class="aditionalInfo">
                <div class="legend">
                    <h2>Informações adicionais</h2>
                </div>
                <div class="sectionContent">
                    <p>{{ recipe.information }}</p>
                </div>
            </section>
        </div>
    {% endblock %}
    {% block scripts %}
        <script src="/recipeShowAndHide.js"></script>
    {% endblock %}