<div class="items" id="users-form">
    <div class="item">
        <p>Nome</p>
        <input type="text" value="{{ user.name }}" placeholder="Informe seu nome" name="name"/>
    </div>
    <div class="item">
        <p>E-mail</p>
        <input value="{{ user.email }}" placeholder="Informe seu e-mail" type="text" name="email"/>
    </div>
    <div class="item">
        <p>Senha</p>
        <input placeholder="Informe sua senha" type="password" name="password" required="required"/>
    </div>
</div>